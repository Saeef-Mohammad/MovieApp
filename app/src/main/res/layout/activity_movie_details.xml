<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.saeefmd.movieapp.MovieDetailsActivity"
    android:background="#F0F0F0">

    <ScrollView
        android:id="@+id/movie_info_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/movie_info_poster_iv"
                android:layout_width="250dp"
                android:layout_height="230dp"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/movie_info_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal"
                    android:text="End Game"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <RatingBar
                    android:id="@+id/movie_info_rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleY=".4"
                    android:scaleX=".4"
                    android:layout_gravity="center_horizontal"
                    android:progressTint="@color/ratingColor"
                    android:secondaryProgressTint="@color/ratingColor"/>

                <TextView
                    android:id="@+id/movie_info_adult_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:text="Adult"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/movie_info_budget_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:text="Budget"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/movie_info_genre_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:text="Genre"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/movie_info_overview_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:text="Overview"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/movie_info_popularity_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:text="Popularity"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/movie_info_companies_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:text="Production Companies"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/movie_info_release_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:text="Release Date"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/movie_info_revenue_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:text="Revenue"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/movie_info_status_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:text="Status"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/p_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

</RelativeLayout>
